{
  "manifest_version": 2,
  "name": "Briefr",
  "version": "1.0",
  "description": "Summarize news articles into key takeaways",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "client/background.js"
    ],
    "persistent": false
  },
  "permissions": ["activeTab", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["client/content.js"]
    }
  ]
}